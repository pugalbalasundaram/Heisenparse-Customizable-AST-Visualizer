<Page x:Class="HeisenParserWPF.Pages.AIAssistantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HeisenParserWPF.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HeisenParse AI"
      Background="#202123"
      FontFamily="Segoe UI">
    <Page.Resources>
        <Style x:Key="NewChatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#343541"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4C4C55"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#4C4C55"/>
                                <Setter TargetName="buttonBorder" Property="BorderBrush" Value="#6A6A78"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChatHistoryItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A4A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1E78FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircularSendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10A37F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#0F9573"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="HistoryPanel" Grid.Column="0" Width="260" Background="#2A2B32" 
                BorderBrush="#40414F" BorderThickness="0,0,1,0" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="NewChatButton" Grid.Row="0" Content="&#x2795; New Chat" 
                        Click="NewChatButton_Click" ToolTip="Start a new conversation"
                        Style="{StaticResource NewChatButtonStyle}"/>

                <ListBox Grid.Row="1" Margin="10,0,10,10"
                         ItemsSource="{Binding ChatHistory}"
                         SelectedItem="{Binding CurrentChatSession, Mode=TwoWay}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ItemContainerStyle="{StaticResource ChatHistoryItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Title}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="2" Background="#3A3B45" Padding="10" 
                        CornerRadius="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="User: [Username]" Foreground="#CCCCCC" Margin="0,5"/>
                        <Button Content="Logout" Style="{StaticResource NewChatButtonStyle}" 
                                Margin="0,5,0,0" Padding="8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#343541" Padding="15,10" BorderBrush="#40414F" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ToggleHistoryButton" Grid.Column="0" Click="ToggleHistoryPanel_Click" 
                            ToolTip="Toggle Chat History">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Width="30" Height="30">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C55"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" Fill="White" Width="18" Height="18" Stretch="Uniform"/>
                    </Button>

                    <TextBlock Text="HeisenParse AI" Grid.Column="1" Foreground="White" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Button x:Name="BackButton" Grid.Column="2" Click="BackButton_Click" 
                            ToolTip="Go Back">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15" Width="30" Height="30">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C55"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="White" Width="18" Height="18" Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                          HorizontalAlignment="Stretch" Margin="0">
                <ItemsControl ItemsSource="{Binding CurrentChatSession.Messages}"
                              HorizontalAlignment="Center" Width="700" Margin="0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,8">
                                <Border x:Name="MessageBorder"
                                        MaxWidth="600"
                                        Padding="15"
                                        CornerRadius="10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#343541"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Sender}" Value="User">
                                                    <Setter Property="Background" Value="#10A37F"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Message}"
                                               TextWrapping="Wrap"
                                               Foreground="#F0F0F0"
                                               FontSize="15"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="1" x:Name="LoadingIndicator" Background="#80000000" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="25"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar IsIndeterminate="True" Style="{StaticResource {x:Type ProgressBar}}" Width="25" Height="25" Foreground="#10A37F"/>
                    <TextBlock Text="AI is thinking..." Foreground="White" FontSize="16" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Padding="15,10" VerticalAlignment="Bottom">
                <Grid HorizontalAlignment="Center" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="UserInputTextBox"
                             Grid.Column="0"
                             MinHeight="50"
                             MaxHeight="150"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="#343541"
                             Foreground="White"
                             BorderThickness="0"
                             CaretBrush="White"
                             Padding="15,10"
                             FontSize="15"
                             VerticalContentAlignment="Center"
                             KeyDown="UserInputTextBox_KeyDown">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button x:Name="SendButton" Grid.Column="1"
                            Margin="15,0,0,0"
                            Click="SendButton_Click"
                            Style="{StaticResource CircularSendButtonStyle}"
                            VerticalAlignment="Bottom">
                        <Path Data="M2,21L23,12L2,3V10L17,12L2,14V21Z" Fill="White" Width="18" Height="18" Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
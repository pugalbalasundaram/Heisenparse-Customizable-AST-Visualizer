<Page x:Class="HeisenParserWPF.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Background="#1F2937">

    <Page.Resources>
        <Style x:Key="CompactProfileButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter ContentSource="Header" 
                                              Margin="{TemplateBinding Padding}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0EA5E9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="40,30,40,20">

            <Button DockPanel.Dock="Right" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Style="{StaticResource CompactProfileButton}" 
                    Click="ProfileButton_Click">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Grid Width="30" Height="30" Margin="0,0,5,0">
                        <Image Source="D:\Hisenparser\Heisenparse2.0\assets\images.png" 
                               Width="30" Height="30" 
                               Stretch="UniformToFill">
                            <Image.OpacityMask>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Ellipse Fill="Black" Width="30" Height="30"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Image.OpacityMask>
                        </Image>
                    </Grid>
                    <TextBlock x:Name="ProfileName" 
                               Text="vignesh" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button.ContextMenu>
                    <ContextMenu x:Name="ProfileContextMenu">
                        <MenuItem Header="Account Settings" Click="AccountSettings_Click"/>
                        <Separator/>
                        <MenuItem Header="Log Out" Click="Logout_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="HeisenParse" Foreground="#9CA3AF" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock x:Name="WelcomeText" Text="Welcome, vignesh" Foreground="White" FontSize="38"
                           FontWeight="ExtraBold" Margin="0,5,0,0"/>
            </StackPanel>

        </DockPanel>

        <Grid Grid.Row="1" Margin="40,0,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,30,0,0">
                <TextBlock Text="What would you like to do?" Foreground="#D1D5DB" FontWeight="SemiBold" 
                           FontSize="18" Margin="0,0,0,25"/>

                <Button Content="CREATE NEW CODE" 
                        Background="#0EA5E9" 
                        Click="NewCode_Click" 
                        Style="{StaticResource MainActionButton}"/>

                <Button Content="EDIT EXISTING CODE (UPLOAD)" 
                        Background="#10B981" 
                        Click="UploadCode_Click" 
                        Style="{StaticResource MainActionButton}"/>

                <Button Content="AI ASSISTANT" 
                        Background="#F59E0B" 
                        Foreground="#1F2937" 
                        Click="AIAssistant_Click" 
                        Style="{StaticResource MainActionButton}"/>
            </StackPanel>

            <Grid Grid.Column="1" Margin="80,0,0,0">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <TextBlock Text="Recent Activities" Foreground="White" FontSize="22" FontWeight="Bold" 
                               Margin="0,30,0,15"/>

                    <ListBox x:Name="RecentActivitiesListBox" Background="Transparent" BorderThickness="0"
                             SelectionChanged="RecentActivity_Selected" HorizontalContentAlignment="Stretch">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Padding="15" Margin="0,5" Background="#2F3846" CornerRadius="8"
                                                    BorderBrush="Transparent" BorderThickness="1" Cursor="Hand">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#4B5563"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#0EA5E9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FilePath}" FontWeight="Bold" Foreground="White" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding LastModified, StringFormat='Last opened: {0:g}'}" FontSize="12" Foreground="#D1D5DB"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>